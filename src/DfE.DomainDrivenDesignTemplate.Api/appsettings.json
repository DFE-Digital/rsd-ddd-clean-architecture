{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "IncludeScopes": true
      }
    }
  },
  "ApplicationInsights": {
    "ConnectionString": "Copy connection string from Application Insights Resource Overview"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.ApplicationInsights"
    ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "DfE.DomainDrivenDesignTemplate.Api"
    }
  },
  "FeatureManagement": {
  },
  "CacheSettings": {
    "Memory": {
      "DefaultDurationInSeconds": 60,
      "Durations": {
        "GetPrincipalBySchoolQueryHandler": 86400
      }
    }
  },
  "Authorization": {
    "Policies": [
      {
        "Name": "CanRead",
        "Operator": "OR",
        "Roles": [ "API.Read" ]
      },
      {
        "Name": "CanReadWrite",
        "Operator": "AND",
        "Roles": [ "API.Read", "API.Write" ]
      },
      {
        "Name": "CanReadWritePlus",
        "Operator": "AND",
        "Roles": [ "API.Read", "API.Write" ],
        "Claims": [
          {
            "Type": "API.PersonalInfo",
            "Values": [ "true" ]
          }
        ]
      }
    ]
  }
}
